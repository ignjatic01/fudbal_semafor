<UserControl x:Class="FudbalSemafor.Views.Shared.SharedMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FudbalSemafor.Views.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
        <Menu VerticalAlignment="Center" Background="Transparent" HorizontalAlignment="Left">
            <MenuItem Header="Igrači" Click="OpenIgrac"/>
            <MenuItem Header="Klubovi" Click="OpenKlub"/>
            <MenuItem Header="Stadioni" Click="OpenStadion"/>
            <MenuItem Header="Utakmice" />
            <MenuItem Header="Šifarnici">
                <MenuItem Header="Tip kartona" Click="OpenKartonTip"/>
                <MenuItem Header="Pozicija" Click="OpenPozicija"/>
            </MenuItem>
            <MenuItem Header="Opcije" />
        </Menu>
    </StackPanel>
</UserControl>
